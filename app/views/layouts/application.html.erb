<!DOCTYPE html>
<html>
<head>
  <title>Regions of New Zealand - A Geographic Story</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'fips', 'd3/d3.min.js', 'protovis/protodata.js', 'polymaps.min.js' %>

  <%= csrf_meta_tag %>
</head>
<body>
<div class="topbar">
      <div class="topbar-inner">
        <div class="container">
          <h3><%= link_to 'NZ<sup>2</sup>'.html_safe, root_path %></h3>
          <ul class="nav">
            <li class="<%= 'active' if current_page?(root_path) %>">
              <%= link_to 'Home', root_url %>
            </li>
            <li class="<%= 'active' if current_page?(regions_url) %>">
              <%= link_to 'Regions', regions_url %>
            </li>
            <li class="<%= 'active' if current_page?(land_url) %>">
              <%= link_to 'Land', land_url %>
            </li>
            <li class="<%= 'active' if current_page?(waste_url) %>">
              <%= link_to 'Waste', waste_url %>
            </li>
          </ul>
          <ul class="nav secondary-nav">
            <li><%= link_to 'About', root_path(:anchor => 'about') %></li>
            <li><%= link_to 'Sources', root_path(:anchor => 'sources') %></li>
          </ul>
        </div>
      </div><!-- /topbar-inner -->
    </div>

  <div id="root_container" class="container">
    <%= yield %>
  </div>

</body>
</html>
